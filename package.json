{
  "name": "synap-backend",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "Synap - Event-Sourced Knowledge Backend",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build --filter='!admin-ui'",
    "test": "turbo run test",
    "test:e2e": "pnpm --filter @synap/test-e2e test",
    "test:e2e:watch": "pnpm --filter @synap/test-e2e test:watch",
    "test:system": "pnpm build && tsx scripts/test-system.ts",
    "db:migrate": "tsx packages/database/src/migrate.ts",
    "db:studio": "cd packages/database && pnpm drizzle-kit studio",
    "create:hub-client": "tsx scripts/create-hub-client.ts",
    "typecheck": "tsc -b --pretty false",
    "publish:packages": "./scripts/publish-packages.sh",
    "publish:packages:dry-run": "./scripts/publish-packages.sh --dry-run",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --fix --cache",
    "run-ci": "run-s lint typecheck test build"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/js": "^9.39.2",
    "@ory/hydra-client": "^2.2.1",
    "@synap-core/core": "workspace:*",
    "@vitest/ui": "^4.0.7",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "lint-staged": "^16.2.7",
    "npm-run-all": "^4.1.5",
    "tsx": "^4.7.0",
    "turbo": "^2.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.7"
  },
  "pnpm": {
    "overrides": {
      "drizzle-orm": "^0.45.1",
      "drizzle-zod": "0.8.3",
      "zod": "^4.0.0",
      "zod-to-json-schema": "3.23.2"
    },
    "onlyBuiltDependencies": [
      "bcrypt",
      "esbuild",
      "leveldown",
      "protobufjs",
      "sharp",
      "workerd"
    ]
  },
  "packageManager": "pnpm@10.28.0",
  "engines": {
    "node": ">=20",
    "pnpm": ">=10"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
