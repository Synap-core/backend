{
  "name": "synap-backend",
  "version": "1.0.0",
  "private": true,
  "description": "Synap - Event-Sourced Knowledge Backend",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:e2e": "vitest run --config tests/e2e/vitest.config.ts",
    "test:e2e:watch": "vitest watch --config tests/e2e/vitest.config.ts",
    "test:system": "pnpm build && tsx scripts/test-system.ts",
    "db:migrate": "tsx packages/database/src/migrate.ts",
    "db:studio": "cd packages/database && pnpm drizzle-kit studio",
    "create:hub-client": "tsx scripts/create-hub-client.ts",
    "publish:packages": "./scripts/publish-packages.sh",
    "publish:packages:dry-run": "./scripts/publish-packages.sh --dry-run"
  },
  "devDependencies": {
    "@ory/hydra-client": "^2.2.1",
    "@vitest/ui": "^4.0.7",
    "tsx": "^4.7.0",
    "turbo": "^2.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.7"
  },
  "pnpm": {
    "overrides": {
      "drizzle-orm": "^0.45.1"
    }
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=20"
  }
}