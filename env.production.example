# Synap Backend - Production Environment (Multi-User)
# Copy to .env.production and fill in your values

# ==========================================
# DATABASE (PostgreSQL - Neon)
# ==========================================
DB_DIALECT=postgres
DATABASE_URL=postgresql://user:password@ep-xxx.neon.tech/synap?sslmode=require

# ==========================================
# ORY STACK (Kratos + Hydra)
# ==========================================
# Ory Kratos (Identity Provider)
KRATOS_PUBLIC_URL=http://localhost:4433
KRATOS_ADMIN_URL=http://localhost:4434
KRATOS_DSN=postgres://ory:password@localhost:5433/ory?sslmode=disable
KRATOS_UI_URL=https://yourdomain.com  # Change to your production URL

# Ory Hydra (OAuth2 Server)
HYDRA_PUBLIC_URL=http://localhost:4444
HYDRA_ADMIN_URL=http://localhost:4445
HYDRA_DSN=postgres://ory:password@localhost:5433/ory?sslmode=disable
ORY_HYDRA_ISSUER_URL=https://yourdomain.com  # Change to your production URL
ORY_HYDRA_SECRETS_SYSTEM=your-secret-here  # Generate: openssl rand -base64 32
ORY_CONSENT_URL=https://yourdomain.com/consent
ORY_LOGIN_URL=https://yourdomain.com/login

# OAuth2 Clients - Intelligence Hub
HUB_CLIENT_ID=synap-hub
HUB_CLIENT_SECRET=your-hub-client-secret-here
# Run: pnpm create:hub-client to generate these values

# ==========================================
# OAUTH PROVIDERS
# ==========================================

# Google OAuth (https://console.cloud.google.com)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/callback/google

# GitHub OAuth (https://github.com/settings/developers)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ==========================================
# AI PROVIDERS
# ==========================================

# Anthropic Claude (https://console.anthropic.com)
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# OpenAI (for embeddings) (https://platform.openai.com)
OPENAI_API_KEY=sk-proj-your-key-here
EMBEDDINGS_PROVIDER=openai  # or 'google', 'cohere'

# ==========================================
# STORAGE (Cloudflare R2) - V0.3
# ==========================================

# Cloudflare R2 (https://dash.cloudflare.com/r2)
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=synap-storage
R2_PUBLIC_URL=https://synap-storage.r2.dev  # Optional: custom domain

# ==========================================
# INNGEST
# ==========================================
INNGEST_EVENT_KEY=your-inngest-event-key  # Get from https://app.inngest.com
INNGEST_SIGNING_KEY=your-inngest-signing-key
# For local CLI development you can set:
# INNGEST_BASE_URL=http://127.0.0.1:8288
# INNGEST_EVENT_KEY=dev-local-key

# ==========================================
# MEM0 - SUPER MEMORY SYSTEM
# ==========================================
MEM0_API_URL=https://mem0.yourdomain.com  # Change to your production URL
MEM0_API_KEY=your-secure-api-key-here  # Generate: openssl rand -base64 32
MEM0_DB_PASSWORD=your-secure-db-password
MEM0_LOG_LEVEL=info

# ==========================================
# SERVER
# ==========================================
PORT=3000
NODE_ENV=production

# ==========================================
# CORS
# ==========================================
ALLOWED_ORIGINS=http://localhost:3001,https://yourdomain.com



