{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "declaration": true,
    "composite": false,
    "preserveSymlinks": true,
    "noEmit": false // Override root tsconfig to allow declaration generation
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/migrate.ts"
  ]
}