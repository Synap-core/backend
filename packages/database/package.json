{
  "name": "@synap/database",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema/index.d.ts",
      "import": "./dist/schema/index.js",
      "default": "./dist/schema/index.js"
    },
    "./dist/schema/index.js": {
      "types": "./dist/schema/index.d.ts",
      "import": "./dist/schema/index.js",
      "default": "./dist/schema/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "migrations-custom",
    "migrations-drizzle"
  ],
  "scripts": {
    "build": "tsc --build",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "db:migrate": "tsx scripts/migrate.ts",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:drop": "drizzle-kit drop"
  },
  "dependencies": {
    "@synap/core": "workspace:*",
    "@synap-core/types": "workspace:^",
    "drizzle-orm": "^0.33.0",
    "pgvector": "^0.2.1",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.15",
    "drizzle-kit": "^0.24.0",
    "postgres": "^3.4.7",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.15"
  },
  "publishConfig": {
    "access": "public"
  }
}