{
  "name": "@synap/database",
  "version": "0.1.1",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema/index.d.ts",
      "import": "./dist/schema/index.js",
      "default": "./dist/schema/index.js"
    }
  },
  "files": [
    "dist",
    "migrations-custom",
    "migrations-drizzle"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run -c vitest.unit.config.ts",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "db:migrate": "tsx scripts/migrate.ts",
    "db:generate": "tsx ./node_modules/drizzle-kit/bin.cjs generate",
    "db:push": "tsx ./node_modules/drizzle-kit/bin.cjs push",
    "db:push:force": "tsx ./node_modules/drizzle-kit/bin.cjs push --force --verbose",
    "db:studio": "tsx ./node_modules/drizzle-kit/bin.cjs studio",
    "db:drop": "tsx ./node_modules/drizzle-kit/bin.cjs drop"
  },
  "dependencies": {
    "@synap-core/core": "workspace:*",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "0.8.3",
    "pgvector": "^0.2.1",
    "postgres": "^3.4.7",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.15",
    "bcryptjs": "^3.0.3",
    "drizzle-kit": "^0.31.8",
    "postgres": "^3.4.7",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.15"
  },
  "publishConfig": {
    "access": "public"
  }
}
