{
  "name": "@initiativ/git",
  "version": "0.1.0",
  "description": "Git versioning for Initiativ Core - handles .md file versioning with auto-commit",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "git",
    "versioning",
    "auto-commit",
    "isomorphic-git"
  ],
  "author": "Antoine Servant",
  "license": "MIT",
  "dependencies": {
    "simple-git": "^3.27.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2"
  }
}

