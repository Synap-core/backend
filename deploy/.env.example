# Synap Backend Configuration Template
# Copy this file to .env and fill in your values

# ============================================================================
# DOMAIN & SSL
# ============================================================================
# Your domain name (e.g., synap.example.com)
DOMAIN=synap.example.com

# Email for Let's Encrypt SSL certificates
LETSENCRYPT_EMAIL=admin@example.com

# ============================================================================
# DATABASE
# ============================================================================
# PostgreSQL password (auto-generated by setup script)
# Use a strong random password: openssl rand -base64 32
POSTGRES_PASSWORD=

# ============================================================================
# AUTHENTICATION
# ============================================================================
# JWT secret for session tokens (auto-generated by setup script)
# Use a strong random password: openssl rand -base64 64
JWT_SECRET=

# Ory Kratos secrets (auto-generated by setup script)
KRATOS_SECRETS_COOKIE=
KRATOS_SECRETS_CIPHER=
KRATOS_WEBHOOK_SECRET=

# ============================================================================
# STORAGE
# ============================================================================
# MinIO credentials (auto-generated by setup script)
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=

# ============================================================================
# SEARCH
# ============================================================================
# Typesense API keys (auto-generated by setup script)
TYPESENSE_API_KEY=
TYPESENSE_ADMIN_API_KEY=

# ============================================================================
# JOBS
# ============================================================================
# Inngest keys (auto-generated by setup script)
INNGEST_EVENT_KEY=
INNGEST_SIGNING_KEY=

# ============================================================================
# AI PROVIDERS (Optional - can skip for basic deployment)
# ============================================================================
# Intelligence service API key (auto-generated by setup script)
INTELLIGENCE_API_KEY=

# AI Provider: "anthropic" | "openai" | "" (empty to disable)
AI_PROVIDER=anthropic

# Embeddings Provider: "openai" | "deterministic"
# Use "deterministic" if you don't have OpenAI API key
EMBEDDING_PROVIDER=deterministic

# Get keys from:
# - OpenAI: https://platform.openai.com/api-keys
# - Anthropic: https://console.anthropic.com/
# - Google AI: https://makersuite.google.com/app/apikey

OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_AI_API_KEY=

# ============================================================================
# OPTIONAL: Advanced Configuration
# ============================================================================
# Enable debug logging (true/false)
DEBUG=false

# Maximum file upload size (default: 100MB)
MAX_UPLOAD_SIZE=100MB

# Database connection pool size (default: 10)
DB_POOL_SIZE=10

# Redis max memory (default: 256mb)
REDIS_MAX_MEMORY=256mb
